{
  "editor.acceptSuggestionOnEnter": "off",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingQuotes": "never",
  "editor.autoIndent": "keep",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "block-outline",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.detectIndentation": false,
  "editor.fontFamily": "BIZUDPゴシック, PlemolJP, 'MyricaM M', 'MSゴシック'",
  "editor.fontSize": 14,
  "editor.guides.bracketPairs": false,
  "editor.guides.indentation": false,
  "editor.inlayHints.enabled": "off",
  "editor.largeFileOptimizations": false,
  "editor.minimap.enabled": false, // あんまり便利じゃない
  "editor.minimap.maxColumn": 120,
  "editor.quickSuggestionsDelay": 500,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.rulers": [
    80,
    100,
    120
  ],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "extensions.ignoreRecommendations": true,
  // "files.autoGuessEncoding": true,
  "files.associations": {
    "*.mdx": "markdown"
  },
  "files.exclude": {
    // "**/.vscode": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/storage": true,
    "**/node_modules": true
  },
  "files.eol": "\n", // LF
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "search.exclude": {
    "**/node_modules/**/*": true,
    "**/jquery*.js": true
  },
  "javascript.format.enable": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "GitBash": {
      "source": "GitBash",
      "path": [
        "${process.env['ProgramFiles']}\\Git\\bin\\bash.exe",
        "${process.env['LocalAppData']}\\Programs\\Git\\bin\\bash.exe"
      ],
    },
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
  },
  "window.title": "${rootName}${separator}${dirty}${activeEditorLong}",
  "window.zoomLevel": 1,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "newUntitledFile",

  // 拡張機能 ------------------------------------------------------------------
  // Blockman
  "blockman.n04ColorComboPreset": "Classic Dark 1 (Super gradients)",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,

  // Code Runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "nim": "nim compile --verbosity:0 --hints:off --out:output/ --run",
  },

  // Draw.io
  "hediet.vscode-drawio.customFonts": ["BIZUDPゴシック"],
  "hediet.vscode-drawio.local-storage": "",
  "hediet.vscode-drawio.resizeImages": null,

  // Git
  "git.openRepositoryInParentFolders": "never",

  // Markdown All in One
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.orderedList.marker": "one",
  "markdown.extension.print.includeVscodeStylesheets": false,

  // Markdown Preview Enhanced
  // https://github.com/shd101wyy/vscode-markdown-preview-enhanced/blob/master/package.json
  // "markdown-preview-enhanced.previewTheme": "atom-material.css",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  // "markdown-preview-enhanced.previewTheme": "newsprint.css",
  // "markdown-preview-enhanced.revealjsTheme": "beige.css",
  // "markdown-preview-enhanced.revealjsTheme": "moon.css",
  // "markdown-preview-enhanced.revealjsTheme": "sky.css",
  // "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "markdown-preview-enhanced.revealjsTheme": "white.css",
  "markdown-preview-enhanced.plantumlJarPath": "%userprofile%\\documents\\plantuml-1.2023.13.jar",

  // PlantUML
  // Alternate plantuml.jar location. Leave it blank to use integrated jar.
  // "plantuml.jar": "C:\\Apps\\PlantUML\\plantuml.jar",
  "plantuml.exportFormat": "svg",
  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "https://www.plantuml.com/plantuml",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // 言語識別子 ----------------------------------------------------------------
  // 1.参考
  //    1. https://code.visualstudio.com/docs/languages/identifiers#_known-language-identifiers
  // 1. Command Palette (Ctrl + Shift + P)
  // 2. Preferences: Configure Language Specific Settings
  "[css]": {},
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.tabSize": 2
  },
  "[markdown,mdx]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": false,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[html]": {},
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jade]": { // Pug
  },
  "[sql]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
}
